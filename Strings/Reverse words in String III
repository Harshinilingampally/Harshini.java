class Solution {
    public String reverseWords(String s) {
        String[] words = s.split(" ");
        StringBuilder sb1 = new StringBuilder();
        for (int i = 0; i < words.length; i++) {
            StringBuilder sb2 = new StringBuilder(words[i]);
            sb1.append(sb2.reverse().toString());
            if (i != words.length - 1) {
                sb1.append(" ");
            }
        }
        return sb1.toString();
    }
}
