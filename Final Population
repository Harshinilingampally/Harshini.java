
import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner scn=new Scanner(System.in);
		int t=scn.nextInt();
		for(int i=0;i<t;i++){
		    int x=scn.nextInt();
		    int y=scn.nextInt();
		    int z=scn.nextInt();
		    System.out.println(x-y+z);
		}
	}
}
